# Football-Data.org key (optional). Empty = skip this API.
FOOTBALL_DATA_KEY=

# Timezone & window
TZ=Europe/Istanbul
START_HOUR=0

# ESPN experimental scraper (OFF by default). Enable only if you have rights to scrape.
ENABLE_ESPN=0
ESPN_SCHEDULE_URL=https://www.espn.com/soccer/schedule

# ESPN league filters (regex OR lists, separated by | ). Leave empty to use built-in defaults.
ESPN_PRIMARY=premier|la liga|serie a|bundesliga|ligue 1|eredivisie|primeira|super lig|mls|scottish premiership
ESPN_SECONDARY=championship|segunda|serie b|2\. bundesliga|ligue 2|tff 1\. lig|j1 league|k league|belgian pro league|austrian bundesliga|swiss super league
ESPN_INTL=uefa|champions league|europa league|conference league|european championship|nations league|world cup|qualifier|libertadores|sudamericana

# Model tuning
SHARPEN_TAU_1X2=1.25
STRONG_DIFF_TILT=220
EDGE_MIN=0.08
